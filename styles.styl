*
  box-sizing: border-box;

html
  background: #e5eff1;

html,
body {
  min-height: 100%;
  height: 100%;
}

.show-news
  display: none;

.filter-button
  display: inline-block;
  width: 100px;
  height: 100px;
  margin: 20px 50px 20px 20px;
  background: black;
  color: white;
  text-align: center;
  vertical-align: top;

.news-container
  display: inline-flex;
  flex-direction: row;
  flex-wrap: wrap;
  max-width: 1410px;
  height: 100%;
  width: 100%;
  max-height: 100%;
  align-content: flex-start;
  &:empty:before
    content: '';
    display: block;
    width: 800px;
    height: 800px;
    max-width: 100%;
    max-height: 100%;
    margin: 0 auto;
    background: url(./images/loader.gif) no-repeat;
    background-size: 100%;
    background-position: center;
  .news-item
    display: flex;
    flex-direction: row;
    background: white;
    border: 1px solid black;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    margin: 5px;
    animation: news 400ms;
    width: calc(33.333% - 10px);
    position: relative;
    height: 202px;
    .news-image
      min-width: 200px;
      width: 200px;
      height: 200px;
      filter: blur(3px);
      animation: image 100ms 100ms;
      animation-fill-mode: forwards;
      object-fit: cover;
    .news-info
      background: linear-gradient( to right, #F9F9F9, white);
      padding: 10px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      width: calc(100% - 200px);
      .news-title
        color: black;
        text-decoration: none;
        font-weight: bold;
        &:hover
          text-decoration: underline;
      .news-date
        font-size: 12px;
        align-self: flex-end;
    .news-checkbox
      position: absolute;
      width: 20px;
      height: 20px;
      left: 2px;
      top: 2px;
      input
        display: none;
        &:checked + .checkbox-image
          background-image: url(./images/checkbox-image-checked.svg);
          border-color: white;
      .checkbox-image
        background: white no-repeat;
        background-size: cover;
        border-radius: 3px;
        border: 1px solid black;
        height: 100%;

@media (max-width: 1410px) {
  .news-container .news-item {
    width: calc(50% - 10px);
  }
}

@media (max-width: 950px) {
  .news-container .news-item {
    width: 100%;
  }
}

@media (max-width: 500px) {
  .news-container .news-item {
    .news-image {
      min-width: 130px;
      width: 130px;
      height: 130px;
    }
    .news-info {
      width: calc(100% - 130px);
    }
  }
}

@keyframes news
  from
    transform: translate(10px, 10px);
  to
    transform: translate(0, 0);

@keyframes image
  from
    filter: blur(3px);
  to
    filter: none;
