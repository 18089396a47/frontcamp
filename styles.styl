*
  box-sizing: border-box;

html
  background: #e5eff1;

.news-container
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 0 auto;
  max-width: 1410px;
  &:empty:before
    content: '';
    display: block;
    width: 800px;
    height: 800px;
    margin: 0 auto;
    background: url(./images/loader.gif);
  .news-item
    display: flex;
    flex-direction: row;
    background: white;
    border: 1px solid black;
    box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    margin: 5px;
    animation: news 400ms;
    width: calc(33.333% - 10px);
    .news-image
      min-width: 200px;
      width: 200px;
      height: 200px;
      filter: blur(3px);
      animation: image 100ms 100ms;
      animation-fill-mode: forwards;
      object-fit: cover;
    .news-info
      background: linear-gradient( to right, #F9F9F9, white);
      padding: 10px;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      .news-title
        color: black;
        text-decoration: none;
        font-weight: bold;
        &:hover
          text-decoration: underline;
      .news-date
        font-size: 12px;
        align-self: flex-end;

@media (max-width: 1410px) {
  .news-container .news-item {
    width: calc(50% - 10px);
  }
}

@media (max-width: 950px) {
  .news-container .news-item {
    width: 100%;
  }
}

@keyframes news
  from
    transform: translate(10px, 10px);
  to
    transform: translate(0, 0);

@keyframes image
  from
    filter: blur(3px);
  to
    filter: none;
