{
    "ecmaFeatures": {
        "modules": true
    },
    "env": {
        "browser": true,
        "node": true
    },
    "extends": "airbnb",
    "rules": {
        "indent": ["error", 4],
        "no-use-before-define": ["off", { "functions": true }],
        "import/no-unresolved": [2, { ignore: ['\.styl$'] }],
        "import/extensions": [0]
    },
    "globals": {
        "require": true
    }
}
